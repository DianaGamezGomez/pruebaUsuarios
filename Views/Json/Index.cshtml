@model List<DianaGamezWebApp.Models.User>
@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <div class="container">

    <div class="modal fade" id="ModalAlta" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Alta de usuario</h3>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-5" style="text-align:left;">Name:</div>
                            <div class="col-xs-5"><input class="form-control" id="AltaName" /> </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5" style="text-align:left;">Alias:</div>
                            <div class="col-xs-5"><input class="form-control" id="AltaAlias" /></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5" style="text-align:left;">Active:</div>
                            <div class="col-xs-5"><select class="form-select" style="height:34px;" id="AltaActive">
                                <option value="true">1</option><option value="false">0</option></select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5" style="text-align:left;">Exp:</div>
                            <div class="col-xs-5"><input class="form-control" id="AltaExp" /></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="ModalSubmit" onclick="AltaDeUsuario()" type="button" class="btn btn-primary" data-dismiss="modal">Realizar Alta</button>
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Exp</th>
                <th>Alias</th>
                <th>Name</th>
                <th>Active</th>
                <th>Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td scope="row">@i.id</td>
                    <td scope="row">@i.Exp</td>
                    <td scope="row">@i.Alias</td>
                    <td scope="row">@i.Name</td>
                    <td scope="row">@i.Active</td>
                    <td scope="row">@i.RegisterDate</td>
                    <td scope="row"><button onclick="ShowUpdate(@i.id)"><i class="fa fa-pencil"></i></button><button onClick="DeleteRow(@i.id)"><i class="fa fa-trash"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
    <div style="float:right;">
        <button data-toggle="modal" data-target="#ModalAlta"><i class="fa fa-plus"></i></button>
        <label>Nuevo Usuario</label>
    </div>

    <br />
    <br />
    <form method="post" action="~/Json/InsertUser" id="forma" name="forma" class="border" style="display:none; width:100%">
        <h4 style="margin:12px;" class="UpdUsuario">Actualizar informaci&oacute;n de usuario</h4>

        <div class="form-row">
            <div class="form-group col-sm-6">
                <label for="ExpField">Exp</label>
                <input type="text" class="form-control" id="Exp" name="Exp">
            </div>
            <div class="form-group col-sm-6">
                <label for="active">Active</label>
                <select class="form-select form-select-lg mb-3" id="Active" name="Active">
                    <option selected>Select an option</option>
                    <option value="True">1</option>
                    <option value="False">0</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-sm-6">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name">
            </div>
            <div class="form-group col-sm-6">
                <label for="alias">Alias</label>
                <input type="text" class="form-control" id="Alias" name="Alias">
            </div>
        </div>
        <button type="button" onclick="Update()" class="btn btn-primary UpdUsuario" style="margin:12px;">Actualiza</button>
    </form>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="~/Scripts/Metodos.js"></script>

</body>
</html>